    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "GHL Project",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/server.ts",
            "preLaunchTask": "npm: build",
            "outFiles": [
                "${workspaceFolder}/.build/**/*.js"
            ],
            "env": {
                "PORT": "8080",
                "MONGODB_URI": "mongodb://127.0.0.1:27017/testdb"
            }
        }
    ]
}